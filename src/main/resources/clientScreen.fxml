<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.koniosoftworks.kvstreaming.presentation.ui.client.ClientScreenController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <top>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <Label fx:id="username"/>
                        <TextField fx:id="ipPort" promptText="Put server TCP ip:port" text="127.0.0.1:31012"/>
                        <Button fx:id="connectButton" defaultButton="true" mnemonicParsing="false"
                                onAction="#handleConnectButton" text="Connect"/>
                        <Button fx:id="disconnectButton" cancelButton="true" mnemonicParsing="false"
                                onAction="#handleDisconnectButton" text="Disconnect"/>
                    </buttons>
                </ButtonBar>
            </top>
            <left>
                <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                            prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER_LEFT">
                    <ImageView fitHeight="320.0" fitWidth="560.0" pickOnBounds="true" preserveRatio="true"
                               fx:id="imageView" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"
                               AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
                        <viewport>
                            <Rectangle2D/>
                        </viewport>
                    </ImageView>
                </AnchorPane>
            </left>
            <center>
                <ListView fx:id="listView" editable="false" prefHeight="242.0" prefWidth="100.0" maxWidth="300"
                          BorderPane.alignment="CENTER_RIGHT"/>
            </center>
            <bottom>
                <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                        <TextField fx:id="messageTextField" onKeyPressed="#handleTextMessageKeyEvent"
                                   prefWidth="551.0"/>
                        <Button fx:id="sendButton" maxWidth="200" mnemonicParsing="false" onAction="#handleSendButton"
                                prefHeight="26.0" snapToPixel="false" text="Send"/>
                    </buttons>
                </ButtonBar>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
